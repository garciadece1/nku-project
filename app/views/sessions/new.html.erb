<%- title "Sign in" %>

<%= flash_messages %>

<div class="container">
  <div style="width: 400px;">
    <h3>Sign in</h3>
    <%= form_for :session, url: sessions_path do |f| %>
      <div class="form-group">
        <%= f.text_field :email, :placeholder => "Email address", :autofocus => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, :placeholder => "Password", class: "form-control"  %>
      </div>

       <div class="form-group">
        <%= f.submit  :class=> "btn btn-primary", :value => "Submit" %>
      </div>
    </form>
    <hr />
    <p> Not registered yet? <%= link_to "Sign up", sign_up_path  %><p>
    <% end %>
  </div>
</div>
